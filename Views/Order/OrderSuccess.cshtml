@model Music_Shopping.Models.order

@{
    ViewBag.Title = "订单提交成功";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body text-center">
            <h2 class="text-success mb-4">订单提交成功！</h2>
            <p class="lead">订单号：@Model.order_id</p>
            <p>订单金额：￥@Model.total_price</p>
            <p>订单状态：@Model.status</p>
            
            <div class="mt-4">
                <h4>订单详情</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>商品</th>
                                <th>单价</th>
                                <th>数量</th>
                                <th>小计</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in ViewBag.OrderDetails)
                            {
                                <tr>
                                    <td>@detail.ProductName</td>
                                    <td>￥@detail.Price</td>
                                    <td>@detail.Amount</td>
                                    <td>￥@(detail.Price * detail.Amount)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" id="colored-button" style="text-decoration: none;">返回首页</a>
                <a href="@Url.Action("MyOrders", "Order")" id="colored-button" style="text-decoration: none;">查看我的订单</a>
            </div>
        </div>
    </div>
</div> 