@model Music_Shopping.Models.order

@{
    ViewBag.Title = "订单详情";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>订单详情</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>基本信息</h5>
                    <p><strong>订单号：</strong>@Model.order_id</p>
                    <p><strong>下单时间：</strong>@Model.create_time</p>
                    <p><strong>订单状态：</strong>@Model.status</p>
                </div>
            </div>

            <h5>商品清单</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>商品</th>
                            <th>单价</th>
                            <th>数量</th>
                            <th>小计</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in ViewBag.OrderDetails)
                        {
                            <tr>
                                <td>@detail.ProductName</td>
                                <td>￥@detail.Price</td>
                                <td>@detail.Amount</td>
                                <td>￥@(detail.Price * detail.Amount)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>总计：</strong></td>
                            <td><strong class="text-danger">￥@Model.total_price</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("MyOrders", "Order")" id="colored-button" style="text-decoration:none">返回订单列表</a>
            </div>
        </div>
    </div>
</div> 